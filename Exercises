#2
prefixes = "JKLMNOPQ"
suffix = "uack"

for i in range(len(prefixes)):
    if prefixes[i] == "O" or prefixes[i] == "Q":
        print(prefixes[i] + suffix)

#3
def count_letters(fruit):
    count = 0
    for char in fruit:
        if char == "a":
            count += 1
    print(count)
count_letters("banana")

#4
def count_letters(fruit):
    count = 0
    for char in fruit:
        if char == "a":
            count += 1
    print(count)
count_letters("banana")

